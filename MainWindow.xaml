<Window x:Class="bmi2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bmi2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="550">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Margin ="5 0 0 0">身高：</TextBlock>
                <TextBox Width="360" Margin="10 0"></TextBox>
                <Button Width="50">清除</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Margin ="5 0 0 0">體重：</TextBlock>
                <TextBox Width="360" Margin="10 0"></TextBox>
                <Button Width="50">清除</Button>
            </StackPanel>
            <Button Margin="20">計算</Button>
        </StackPanel>
    </Grid>
</Window>
